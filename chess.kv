#:import dp kivy.metrics.dp
#:kivy 2.3

ChessGame:

    BoardGrid:
        id: BoardGrid
        size_hint: 1, 1

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "images/Board.png"

    Ui:

        orientation: "vertical"
        size_hint: 0.35, 1
        

        canvas.before:
            Color:
                rgba: .7, .7, .7, 1
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            size_hint: 1, 1

            Label:
                text: BoardGrid.move_list_text
                text_size: self.width, None
                size_hint_y: None
                height: max(self.texture_size[1], self.parent.height)
                color: 0, 0, 0, 1
                halign: "left"
                valign: "top"